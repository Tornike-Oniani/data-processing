<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DataProcessing.Styles">

    <SolidColorBrush x:Key="MainButtonBackgroundBrush" Color="#217346" />
    <SolidColorBrush x:Key="MainButtonHoverBackgroundBrush" Color="#0e5c2f" />
    <SolidColorBrush x:Key="MainButtonPressedBackgroundBrush" Color="#004b1c" />
    <SolidColorBrush x:Key="MainButtonTextBrush" Color="#ffffff" />
    <SolidColorBrush x:Key="MainButtonDisabledTextBrush" Color="#4e9668" />

    <ControlTemplate x:Key="MainButtonControlTemplate" TargetType="{x:Type Button}">
        <Border Background="{TemplateBinding Background}"
                Padding="{TemplateBinding Padding}">
            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
    </ControlTemplate>

    <Style x:Key="MainButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="0 2 0 2" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{StaticResource MainButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MainButtonTextBrush}" />
        <Setter Property="Template" Value="{StaticResource MainButtonControlTemplate}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource MainButtonHoverBackgroundBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource MainButtonPressedBackgroundBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource MainButtonDisabledTextBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>