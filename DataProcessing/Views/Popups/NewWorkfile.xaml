<UserControl x:Class="DataProcessing.Views.NewWorkfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataProcessing.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10 10 10 10">
        <Grid.RowDefinitions>
            <!-- Name row-->
            <RowDefinition Height="*" />
            <!-- Buttons row-->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Name -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Name:" FontWeight="SemiBold" />
            <TextBox Text="{Binding Name}" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0"
                    Grid.Row="1">
            <Button Content="Create" MinWidth="100" 
                    Margin="0 0 10 0"
                    Command="{Binding CreateWorkfileCommand}"/>
            <Button Content="Cancel" MinWidth="100"
                    Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
